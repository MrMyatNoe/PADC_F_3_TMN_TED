<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp">

    <ImageView
        android:id="@+id/iv_search_result_video"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:scaleType="fitXY"
        android:src="@drawable/img_news_dummy" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_search_result_video"
        android:layout_alignRight="@id/iv_search_result_video"
        android:layout_margin="4dp"
        android:background="@color/primary_text"
        android:text="11:30"
        android:textColor="@color/white_full" />

    <TextView
        android:id="@+id/tv_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/iv_search_result_video"
        android:text="Julio Gil"
        android:textColor="@color/primary_text"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_topic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_author"
        android:layout_below="@id/tv_author"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@id/iv_search_result_video"
        android:maxLines="3"
        android:text="Future tech will give you benefits of city life anywhere"
        android:textColor="@color/primary_text"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/iv_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="8dp"
        android:layout_toRightOf="@id/tv_topic"
        android:padding="8dp"
        android:src="@drawable/ic_more_vert_white_24dp" />
</RelativeLayout>