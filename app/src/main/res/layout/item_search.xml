<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="8dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="Recommended topics"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_topic_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:drawableLeft="@drawable/ic_public_black_24dp"
            android:drawablePadding="32dp"
            android:text="Testing"
            android:textColor="@color/primary_text"
            android:textSize="16sp"
            android:onClick="onTapResult"/>

        <TextView
            android:id="@+id/tv_topic_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_topic_one"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:drawableLeft="@drawable/ic_public_black_24dp"
            android:drawablePadding="32dp"
            android:text="Botany"
            android:textColor="@color/primary_text"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_topic_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_topic_two"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:drawableLeft="@drawable/ic_public_black_24dp"
            android:drawablePadding="32dp"
            android:text="Urban"
            android:textColor="@color/primary_text"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_show_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_topic_three"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="64dp"
            android:layout_marginTop="16dp"
            android:text="Show all topics"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:textStyle="bold" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
